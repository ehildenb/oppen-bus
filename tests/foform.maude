  var N : Nat .

  eq test(N) = failure [owise] .

  ceq test(1) = success
   if '_+_['Z:Nat, 'Y:Nat] := '_+_['X:Nat, 'Y:Nat] << ('X:Nat <- 'Z:Nat) .

