   if (A['X:Nat] '_+_['X:Nat, 'Y:Nat] ?= 'Z:Nat) := (A['X:Nat] '_+_['X:Nat, 'Y:Nat] ?= 'Z:Nat) << ('X:Nat <- 'A:Nat) .

